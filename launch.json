{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Spring Boot: Connectly",
      "type": "java",
      "request": "launch",
      "mainClass": "com.connectly.ConnectlyApplication",
      "projectName": "connectly",
      "args": "--spring.profiles.active=dev",
      "vmArgs": "-Dserver.port=8080",
 
      "sourcePaths": [
        "src/main/java",
        "src/main/resources"
      ],
      "dependencies": [
        "target/classes",
        "target/dependency/*"
      ]
    }
  ]
}
